APP_NAME="Role Management Integration Tests"
APP_ENV=testing
APP_KEY=base64:TEST_KEY_FOR_INTEGRATION_TESTS_ONLY
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# 測試資料庫配置
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
DB_FOREIGN_KEYS=true

# 快取配置
BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# 郵件配置
MAIL_MAILER=array
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis 配置（如果需要）
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# 測試專用配置
BCRYPT_ROUNDS=4
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# 效能測試配置
PERFORMANCE_TEST_ENABLED=true
PERFORMANCE_MAX_EXECUTION_TIME=2.0
PERFORMANCE_MAX_MEMORY_USAGE=52428800
PERFORMANCE_MAX_QUERY_COUNT=50

# 瀏覽器測試配置
DUSK_DRIVER_URL=http://localhost:9515
DUSK_HEADLESS=true
DUSK_WINDOW_SIZE=1920,1080

# 整合測試配置
INTEGRATION_TEST_TIMEOUT=30
INTEGRATION_TEST_RETRY_COUNT=3
INTEGRATION_TEST_PARALLEL=false

# 測試資料配置
TEST_DATA_SEED=true
TEST_DATA_CLEANUP=true
TEST_LARGE_DATASET_SIZE=1000

# 快取測試配置
CACHE_TEST_TTL=3600
CACHE_TEST_PREFIX=integration_test_

# 審計日誌測試配置
AUDIT_LOG_ENABLED=true
AUDIT_LOG_DRIVER=database

# 多語言測試配置
APP_LOCALE=zh_TW
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=zh_TW